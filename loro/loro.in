import os
import sys
import signal
import locale
import gettext

APP_ID = '@APP_ID@'
VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
gettext.install('loro', localedir)

try:
  locale.bindtextdomain('loro', localedir)
  locale.textdomain('loro')
except:
  print('Cannot set locale.')
try:
  gettext.bindtextdomain('loro', localedir)
  gettext.textdomain('loro')
except:
  print('Cannot load translations.')

